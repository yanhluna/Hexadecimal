#include <iostream>
#include<string.h>
using namespace std;
int main(){
	int valor;
	string  b;
	cout<<"Dame un valor que sea mayor a cero: "<<endl;
	cin>>valor;
	if(valor>0){
		while(valor>0){
			char digito ='0'+ (valor%2);
			b=digito +b;
			valor/=2;
		}
		cout<<"El valor en binario es: "<<b<<endl;
	}
	else{
		cout<<"Te dije que positivo mayor a cero, me lleva la pitufichingada ";
	}
	return 0;
}
